<?xml version="1.0" encoding="utf-8"?><!-- 旋转 从 180 到 0 -->
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <rotate
        android:duration="300"
        android:fromDegrees="+180"
        android:pivotX="50%"
        android:pivotY="50%"
        android:toDegrees="0" />
</set>