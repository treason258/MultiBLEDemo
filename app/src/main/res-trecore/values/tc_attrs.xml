<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 多主题模式 -->
    <attr name="theme_bg_title" format="reference" />
    <attr name="theme_bg_title_text" format="reference" />
    <attr name="theme_bg_title_line" format="reference" />
    <attr name="theme_ic_title_image" format="reference" />

    <!-- VerCodeView -->
    <declare-styleable name="VerCodeView">
        <attr name="backgroud" />
        <attr name="text" />
        <attr name="textColor" />
        <attr name="textSize" />
    </declare-styleable>
    <attr name="backgroud" format="color" />
    <attr name="text" format="string" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />

    <!-- CustomProgressBar -->
    <declare-styleable name="CustomProgressBar">
        <attr name="circleBorder" />
        <attr name="firstColor" />
        <attr name="secondColor" />
        <attr name="speed" />
    </declare-styleable>
    <attr name="circleBorder" format="dimension" />
    <attr name="firstColor" format="color" />
    <attr name="secondColor" format="color" />
    <attr name="speed" format="integer" />

    <!-- CircleImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <!-- HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <!-- **************** project **************** -->

</resources>