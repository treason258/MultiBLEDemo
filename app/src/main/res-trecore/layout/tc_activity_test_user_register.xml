<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tc_backgroud"
    android:orientation="vertical"
    tools:context="com.mjiayou.trecore.ui.demo.TestUserRegisterActivity">

    <!-- 输入手机号 -->
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tc_margin_normal"
        android:layout_marginRight="@dimen/tc_margin_normal"
        android:layout_marginTop="@dimen/tc_margin_normal"
        android:background="@color/tc_gray_light"
        android:hint="请输入手机号"
        android:inputType="number"
        android:padding="@dimen/tc_margin_small" />

    <!-- 请输入验证码 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tc_margin_normal"
        android:layout_marginRight="@dimen/tc_margin_normal"
        android:layout_marginTop="@dimen/tc_margin_small"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_verify_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/tc_gray_light"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="@dimen/tc_margin_small" />

        <TextView
            android:id="@+id/tv_get_verify_code"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/tc_margin_small"
            android:background="@color/tc_gray_light"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/tc_black"
            android:textSize="@dimen/tc_text_size_big" />
    </LinearLayout>

    <!-- 输入密码 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tc_margin_normal"
        android:layout_marginRight="@dimen/tc_margin_normal"
        android:layout_marginTop="@dimen/tc_margin_small"
        android:background="@color/tc_gray_light"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:padding="10dp" />

    <!-- 输入邀请码 -->
    <EditText
        android:id="@+id/et_invite_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tc_margin_normal"
        android:layout_marginRight="@dimen/tc_margin_normal"
        android:layout_marginTop="@dimen/tc_margin_small"
        android:background="@color/tc_gray_light"
        android:hint="请输入邀请码，可以为空"
        android:inputType="text"
        android:padding="@dimen/tc_margin_small" />

    <!-- 注册 -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tc_margin_normal"
        android:layout_marginRight="@dimen/tc_margin_normal"
        android:layout_marginTop="@dimen/tc_margin_normal"
        android:background="@color/tc_gray_light"
        android:text="注册"
        android:textColor="@color/tc_black"
        android:textSize="@dimen/tc_text_size_large" />

</LinearLayout>