    <com.lsjwzh.widget.recyclerviewpager.RecyclerViewPager
        android:id="@+id/recyclerviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/tc_margin_small"
        android:layout_marginRight="@dimen/tc_margin_small"
        android:clipToPadding="false" />

    <!-- 底部信息栏 -->
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="bottom"
        android:background="@color/tc_transparent"
        android:gravity="center"
        android:orientation="horizontal">

        <!-- 文本 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="@dimen/tc_margin_normal"
            android:layout_marginRight="@dimen/tc_margin_normal"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="null"
            android:textColor="@color/tc_white"
            android:textSize="18sp"
            android:visibility="gone" />

        <!-- 圆点 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/tc_margin_normal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_dot_1"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_2"
                android:layout_width="6dp"
