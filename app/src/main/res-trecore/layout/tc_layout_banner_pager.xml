                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_4"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_5"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_6"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_7"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/tc_selector_oval_solid_white_to_theme"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_dot_8"
