<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tc_white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mjiayou.trecore.ui.test.TestHacksActivity">

    <!-- 富文本-HTML -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="富文本-HTML" />

    <TextView
        android:id="@+id/tv_test_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我的URL：http://www.mjiayou.com"
        android:textSize="@dimen/tc_text_size_large" />

    <include layout="@layout/tc_layout_line_horizontal" />

    <!-- 富文本-autoLink -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="富文本-autoLink" />

    <TextView
        android:id="@+id/tv_test_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="all"
        android:text="我的URL：http://www.mjiayou.com"
        android:textSize="@dimen/tc_text_size_large" />

    <include layout="@layout/tc_layout_line_horizontal" />

    <!-- TextSwitcher -->
    <TextSwitcher
        android:id="@+id/textswitcher_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextSwitcher
        android:id="@+id/textswitcher_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageSwitcher
        android:id="@+id/imageswitcher_a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageSwitcher
        android:id="@+id/imageswitcher_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_textswitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT" />

    <include layout="@layout/tc_layout_line_horizontal" />
</LinearLayout>
