<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部tab -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 精选 -->
        <LinearLayout
            android:id="@+id/layout_tab_a"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tab_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/tc_margin_mini"
                android:text="微博A"
                android:textColor="@color/tc_selector_color_gray_to_theme"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_tab_a"
                android:layout_width="48dp"
                android:layout_height="2dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/tc_selector_rect_solid_transparent_to_theme" />

        </LinearLayout>

        <!-- 独家 -->
        <LinearLayout
            android:id="@+id/layout_tab_b"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_tab_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/tc_margin_mini"
                android:text="微博B"
                android:textColor="@color/tc_selector_color_gray_to_theme"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_tab_b"
                android:layout_width="48dp"
                android:layout_height="2dp"
                android:layout_marginTop="-3dp"
                android:background="@drawable/tc_selector_rect_solid_transparent_to_theme" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>